<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>TechX</title>
    <style>
        .product-card img {
            object-fit: cover;
            height: 200px;
        }
        .product-card {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container mt-3">
        <h2>Our Products</h2><br>

        <!-- Laptops Section -->
        <h4>Laptops</h4>
        <div class="row">
            <% laptops.forEach((laptop) => { %>
                <div class="col-md-3 product-card">
                    <div class="card">
                        <img src="/images/<%= laptop.image %>" class="card-img-top" alt="<%= laptop.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= laptop.name %></h5>
                            <p class="card-text">Price: $<%= laptop.price %></p>
                            <a href="/products/laptops/<%= laptop.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Phones Section -->
        <h4>Phones</h4>
        <div class="row">
            <% phones.forEach((phone) => { %>
                <div class="col-md-3 product-card">
                    <div class="card">
                        <img src="/images/<%= phone.image %>" class="card-img-top" alt="<%= phone.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= phone.name %></h5>
                            <p class="card-text">Price: $<%= phone.price %></p>
                            <a href="/products/phones/<%= phone.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Accessories Section -->
        <h4>Accessories</h4>
        <div class="row">
            <% accessories.forEach((accessory) => { %>
                <div class="col-md-3 product-card">
                    <div class="card">
                        <img src="/images/<%= accessory.image %>" class="card-img-top" alt="<%= accessory.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= accessory.name %></h5>
                            <p class="card-text">Price: $<%= accessory.price %></p>
                            <a href="/products/accessories/<%= accessory.id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
